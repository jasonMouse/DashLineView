<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.mouse.dashlineview.DashLineView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:dlv_dash_line_color="@android:color/background_dark"
        app:dlv_dash_line_gap="10dp"
        app:dlv_dash_line_height="2dp"
        app:dlv_dash_line_orientation="horizontal"
        app:dlv_dash_line_width="5dp"
        app:dlv_semicircle_color="@android:color/background_dark"
        app:dlv_semicircle_radius="10dp" />

    <com.mouse.dashlineview.DashLineView
        android:layout_width="30dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:dlv_dash_line_color="@android:color/white"
        app:dlv_dash_line_gap="10dp"
        app:dlv_dash_line_height="5dp"
        app:dlv_dash_line_orientation="vertical"
        app:dlv_dash_line_width="2dp"
        app:dlv_semicircle_color="@android:color/white"
        app:dlv_semicircle_radius="10dp" />

</RelativeLayout>